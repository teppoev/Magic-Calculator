<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SelectedSpinnerItemStyle">
        <item name="android:textColor">@color/absolutelyBlack</item>
        <item name="android:background">@color/yellowOrange</item>
    </style>

    <style name="AlertDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="colorAccent">@color/yellowOrange</item>
        <item name="android:textColor">@color/absolutelyBlack</item>
        <item name="android:windowTitleStyle">@android:style/Theme.Black</item>

    </style>

    <style name="BasicViewStyle" parent="@android:style/Theme.Holo">
        <item name="android:background">@color/absolutelyBlack</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/darkGray</item>
    </style>

    <style name="MenuItemStyle">
        <item name="android:background">@drawable/setting_item</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="MenuItemTextStyle">
        <item name="android:textColor">@color/absolutelyWhite</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
