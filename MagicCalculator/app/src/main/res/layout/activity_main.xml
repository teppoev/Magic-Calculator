<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/butt3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:onClick="NumberClick"
        app:layout_constraintBottom_toBottomOf="@+id/butt2"
        app:layout_constraintStart_toEndOf="@+id/butt2" />

    <Button
        android:id="@+id/equal"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="OperationClick"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/butt0"
        app:layout_constraintTop_toBottomOf="@+id/butt9" />

    <Button
        android:id="@+id/dot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="NumberClick"
        android:text="."
        app:layout_constraintEnd_toStartOf="@+id/butt0"
        app:layout_constraintTop_toBottomOf="@+id/butt7" />

    <Button
        android:id="@+id/div"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="OperationClick"
        android:text="/"
        app:layout_constraintStart_toEndOf="@+id/mul"
        app:layout_constraintTop_toTopOf="@+id/add3" />

    <Button
        android:id="@+id/mul"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="OperationClick"
        android:text="*"
        app:layout_constraintStart_toEndOf="@+id/sub"
        app:layout_constraintTop_toTopOf="@+id/add3" />

    <Button
        android:id="@+id/sub"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="OperationClick"
        android:text="-"
        app:layout_constraintStart_toEndOf="@+id/add3"
        app:layout_constraintTop_toTopOf="@+id/add3" />

    <Button
        android:id="@+id/add3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="280dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="280dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="OperationClick"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dot"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/butt2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="2"
        android:onClick="NumberClick"
        app:layout_constraintBottom_toTopOf="@+id/butt5"
        app:layout_constraintStart_toStartOf="@+id/butt5" />

    <Button
        android:id="@+id/butt4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:onClick="NumberClick"
        app:layout_constraintBottom_toBottomOf="@+id/butt5"
        app:layout_constraintEnd_toStartOf="@+id/butt5" />

    <Button
        android:id="@+id/butt5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="5"
        android:onClick="NumberClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.536" />

    <Button
        android:id="@+id/butt6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:onClick="NumberClick"
        app:layout_constraintBottom_toBottomOf="@+id/butt5"
        app:layout_constraintStart_toEndOf="@+id/butt5" />

    <Button
        android:id="@+id/butt7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="7"
        android:onClick="NumberClick"
        app:layout_constraintBottom_toBottomOf="@+id/butt8"
        app:layout_constraintEnd_toStartOf="@+id/butt8" />

    <Button
        android:id="@+id/butt8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="8"
        android:onClick="NumberClick"
        app:layout_constraintStart_toStartOf="@+id/butt5"
        app:layout_constraintTop_toBottomOf="@+id/butt5" />

    <Button
        android:id="@+id/butt9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="9"
        android:onClick="NumberClick"
        app:layout_constraintBottom_toBottomOf="@+id/butt8"
        app:layout_constraintStart_toEndOf="@+id/butt8" />

    <Button
        android:id="@+id/butt0"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:onClick="NumberClick"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@+id/butt8"
        app:layout_constraintTop_toBottomOf="@+id/butt8" />

    <Button
        android:id="@+id/butt1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="1"
        android:onClick="NumberClick"
        app:layout_constraintBottom_toBottomOf="@+id/butt2"
        app:layout_constraintEnd_toStartOf="@+id/butt2" />

    <TextView
        android:id="@+id/output"
        android:layout_width="239dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:inputType="numberSigned"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/butt2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.718"
        tools:text="0" />

</android.support.constraint.ConstraintLayout>